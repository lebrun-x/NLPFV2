            </ul>
        </nav>

        <div class="page_title">Accueil</div>

        <div id="projectDisplay">
            {% for project in projects %}
                <div class="panel panel-primary">
                    <div class = "panel-heading"> {{ project.name }} </div>
                    <div class = "panel-body">
                        <img id="imageproject" src= "{{ asset(project.image) }}" alt="Image"/>
                        <div class="gain">
                            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Gain: {{project.amount}} € / mois
                        </div>
                        <div class="contact">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Crée le: 12/01/2017<br/>
                        </div>
                        <div class="desctitle"><h4>Description</h4></div>
                        <div class="description"> {{project.description}} </div>
                        <button class="btn btn-primary" onclick="window.location.href='/project/{{ project.projectId }}'">Participer</button>
                    </div>
                </div>
            {% endfor %}
        </div>

	</body>

</html>
